<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2 class="head-line title_h2 text-left bg-light">新規会員登録</h2>
    </div>
  </div>
</div>
<br>
<div class="container">
  <!--form_for-->
  <%= form_for(resource, as: resource_name, url: customer_registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  <div class="field form-group col-xs-12">
    <%= f.label :"名前", class: "col-sm-2 control-label" %>
    <%= f.label :"(姓)", class: "col-sm-1 control-label" %>
    <%= f.text_field :last_name, autofocus: true, placeholder: "令和", class: "col-sm-3 form-control-static rounded name" %>
    <%= f.label :"(名)", class: "col-sm-1 control-label" %>
    <%= f.text_field :first_name, placeholder: "道子",class: "col-sm-3 form-control-static rounded name" %>
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
    <%= f.label :"(セイ)", class: "col-sm-1 control-label" %>
    <%= f.text_field :last_name_kana, placeholder: "レイワ", class: "col-sm-3 form-control-static rounded last_name_kana" %>
    <%= f.label :"(メイ)", class: "col-sm-1 control-label" %>
    <%= f.text_field :first_name_kana, placeholder: "ミチコ",class: "col-sm-3 form-control-static rounded first_name_kana" %>
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
    <%= f.email_field :email, placeholder: "sample@example.com", autocomplete: "email", class: "col-sm-3 form-control-static rounded email" %>
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :"郵便番号(ハイフンなし)", autofocus: true, class: "col-sm-3 control-label" %>
    <%= f.text_field :postal_code, placeholder: "0000000", class: "col-sm-3 form-control-static rounded postal_code" %>
  </div>
  <div class="field  form-group col-xs-12">
    <%= f.label :"住所", class: "col-sm-3 control-label" %>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-sm-7 form-control-static rounded address"  %>
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-3 control-label" %>
    <%= f.text_field :telephone_number, placeholder: "00000000000", class: "col-sm-3 form-control-static rounded telephone_number" %>
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :"パスワード(6文字以上)", class: "col-sm-3 control-label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-3 form-control-static rounded password" %>
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :"パスワード(確認用)", class: "col-sm-3 control-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-3 form-control-static rounded password_confirmation" %>
  </div>
  <div class="actions col-xs-12">
    <%= f.label :"　", class: "col-sm-3 control-label" %>
    <%= f.submit "新規登録", class: "col-sm-2 btn btn-success" %>
  </div>
<% end %>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2 class="text-center">既に登録済みの方</h2>
      <br>
      <p class="text-center">
        <%= link_to "こちら", new_session_path(resource_name), class: "btn-link" %>　からログインください。
      </p>
    </div>
  </div>
</div>