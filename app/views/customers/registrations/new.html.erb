<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2 class="head-line title_h2 text-left bg-light">新規会員登録</h2>
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-11">
    <!--form_with-->
    <%= form_with model: @customer, url: registration_path(resource_name), local: true do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
      <div class="field form-group col-xs-12">
        <%= f.label :"名前", class: "col-sm-2 control-label" %>
        <%= f.label :"(姓)", class: "col-sm-1 control-label" %>
        <%= f.text_field :last_name, autofocus: true, placeholder: "令和", class: "col-sm-3 form-control-static rounded name" %>
        <%= f.label :"(名)", class: "col-sm-1 control-label" %>
        <%= f.text_field :first_name, autofocus: true, placeholder: "道子",class: "col-sm-3 form-control-static rounded name" %>
      </div>
      <div class="field form-group col-xs-12">
        <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
        <%= f.label :"(セイ)", class: "col-sm-1 control-label" %>
        <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ", class: "col-sm-3 form-control-static rounded name" %>
        <%= f.label :"(メイ)", class: "col-sm-1 control-label" %>
        <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ",class: "col-sm-3 form-control-static rounded name" %>
      </div>
      <div class="field form-group col-xs-12">
        <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
        <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", class: "col-sm-5 form-control-static rounded" %>
      </div>
    </div>
  </div>
</div>
  <br>
  <div class="container">
    <div class="row">
      <div class="col text-center">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>
<br>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2 class="text-center">既に登録済みの方</h2>
      <br>
      <p class="text-center">
        <%= link_to "こちら", new_session_path(resource_name), class: "btn-link" %>　からログインください。
      </p>
    </div>
  </div>
</div>