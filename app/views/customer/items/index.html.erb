<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2 class="head-line title_h2 text-center">商品一覧
        <span>
			    (全<%= @items.total_count %>件)
		    </span>
      </h2>
    </div>
  </div>
  <div class="row">
    <div class="d-flex flex-row flex-wrap">
      <% @items.each do |item| %>
        <div class="card-deck mr-2 mb-5", style="width:25%">
          <div class="card">
            <div class ="item-image">
              <%= link_to item_path(item) do %>
                <p class="card-img-top">
                  <%= attachment_image_tag item, :image, width: "100%", format: "jpg", fallback: "no_image.jpg" %>
                </p>
              <% end %>
            </div>
            <div class="card-body">
              <p class="card-title font-weight-bold">
                <%= item.name %>
              </p>
              <p class="item-price">

              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= paginate @items %>
</div>