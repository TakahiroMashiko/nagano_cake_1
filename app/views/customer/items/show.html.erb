<div class="container">
  <div class="row justify-content-center">
    <div class="px-sm-0 col-sm-5">
      <p class="image mt-5 mb-5">
        <%= attachment_image_tag @item, :image, width: "100%", format: "jpg", fallback: "no_image.jpg" %>
      </p>
    </div>
    <div class="px-sm-0 col-sm-5 offset-sm-1">
      <h2 class="mt-5 mb-3 font-weight-bold">
        <%= @item.name %>
      </h2>
      <h5>
        <%= @item.introduction %>
      </h5>
      <br>
      <h4>
      　¥<%= ((@item.price*1.10).to_i).to_s(:delimited) %>（税込）
      </h4>
      <br>
      <% if customer_signed_in? %>
        <%= form_with model: @cart_item, local: true do |f| %>

        <% end %>
      <% end %>
    </div>
  </div>
</div>