<div class="container">
  <div class="row">
    <div class="col-sm-12 px-sm-0 mb-3">
      <div class="container">
        <div class="row">
          <div class="col-xs-3">
            <h2 class="font-weight-bold mt-5 mb-5 mx-3 bg-light">注文履歴詳細</h2>
          </div>
        </div>
      </div>
      <div class="d-flex">
        <div class="pr-2">
          <p class="font-weight-bold">注文情報</p>
          <table class="table table-bordered">
            <tbody>
              <tr>
                <td class="table-light border-dark">注文日</td>
                <td class="border-dark">
                  <%= @order.created_at.strftime("%Y/%m/%d") %>
                </td>
              </tr>
              <tr>
                <td class="table-light border-dark">配送先</td>
                <td class="border-dark">
                〒<%= @order.postal_code %>
                  <br>
                  <%= @order.address %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
