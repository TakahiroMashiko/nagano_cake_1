<div class="container">
  <div class="row">
    <div class="col-sm-12 px-sm-0 mb-3">
      <div class="container">
        <div class="row">
          <div class="col-xs-3">
            <h2 class="font-weight-bold mt-5 mb-5 mx-3 bg-light">注文履歴一覧</h2>
          </div>
        </div>
      </div>
      <table class="table table-bordered">
        <thead class="table-light">
          <tr>
            <th class="border-dark bg-light">注文日</th>
            <th class="border-dark bg-light">配送先</th>
            <th class="border-dark bg-light">注文商品</th>
            <th class="border-dark bg-light">支払金額</th>
            <th class="border-dark bg-light">ステータス</th>
            <th class="border-dark bg-light">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td class="border-dark align-middle text-center">
              <%= order.created_at.strftime("%Y/%m/%d") %>
            </td>
            <td class = "border-dark align-middle">
              <%= order.postal_code %>
              <br>
              <%= order.address %>
              <br>
              <%= order.name %>
            </td>
            <td class="border-dark align-middle">
              <% order.order_items.each do |order_item| %>
                <%= order_item.item.name %>
                <br>
              <% end %>
            </td>
            <td>
              <td class="border-dark align-middle text-center">
                <%= (order.total_payment + order.shipping_fee).to_s(:delimited) %>
              </td>
            </td>
            <td>

            </td>
            <td>

            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>