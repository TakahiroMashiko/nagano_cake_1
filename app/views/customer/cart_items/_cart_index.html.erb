<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0">
      <p class="text-success mt-3">
        <%= flash[:success] %>
      </p>
      <p class="text-danger mt-3">
        <%= flash[:danger] %>
      </p>
      <h2 class="font-weight-bold mt-5">
        ショッピングカート
      </h2>
    </div>
    <div class="col-sm-3 px-sm-0 text-right">
      <% unless cart_item.blank? %>
        <%= link_to "カートを空にする", cart_items_all_delete_path, class: "btn btn-danger mt-5", id: "all-delete", method: :delete, remote: true, data: { confirm: '削除しますか？' } %>
      <% end %>
    </div>
  </div>

  <% if cart_item.blank? %>
    <div class="text-center">

    </div>
  <% else %>

  <% end %>
</div>