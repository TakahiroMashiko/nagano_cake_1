<div class="container">
  <div class="row">
    <div class="col-sm-6 my-5">
    <p class="text-success">
      <%= flash[:success] %>
    </p>
    <div class="container">
      <div class="row">
        <div class="col-xs-3">
          <h2 class="mb-5 font-weight-bold bg-light">マイページ</h2>
        </div>
      </div>
    </div>
    <div class="d-flex mb-4">
      <h4 class="pr-4 font-weight-bold">登録情報</h4>
      <%= link_to "編集する", edit_customers_path, class: "btn btn-success col-3" %>
    </div>
      <div class="row">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th class="border-dark table-light bg-light", style="width: 30%">氏名</th>
              <td class="border-dark"><%= @customer.last_name %> <%= @customer.first_name %></td>
            </tr>
            <tr>
              <th class="border-dark table-light bg-light", style="width: 30%">カナ</th>
              <td class="border-dark"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <th class="border-dark table-light bg-light", style="width: 30%">郵便番号</th>
              <td class="border-dark"><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <th class="border-dark table-light bg-light", style="width: 30%">住所</th>
              <td class="border-dark"><%= @customer.address %></td>
            </tr>
            <tr>
              <th class="border-dark table-light bg-light", style="width: 30%">電話番号</th>
              <td class="border-dark"><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <th class="border-dark table-light bg-light", style="width: 30%">メールアドレス</th>
              <td class="border-dark"><%= @customer.email %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="d-flex my-3">
        <h4 class="pr-5 font-weight-bold">配送先</h4>
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary col-3" %>
      </div>
      <div class="d-flex">
        <h4 class="pr-4 font-weight-bold">注文履歴</h4>
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary col-3" %>
      </div>
    </div>
  </div>
</div>