<div class="container">
  <div class="row">
    <div class="col-sm-12 my-5">
    <p></p>
      <div class="container">
        <div class="row">
          <div class="col-xs-3">
            <h2 class="mb-5 font-weight-bold bg-light">会員編集情報</h2>
          </div>
         </div>
      </div>
      <%= form_with model: @customer, url: customers_path ,local: true do |f| %>
        <div class="field">
          <%= f.label "氏名", class: "col-sm-3" %>
          <%= f.text_field :last_name, autocomplete: "last_name", placeholder: "令和", class: "col-sm-3 mt-1 form-control-static rounded" %>
          <%= f.text_field :first_name, autocomplete: "first_name", placeholder: "道子", class: "col-sm-3 mt-1 form-control-static rounded" %>
        </div>
        <div class="field">
          <%= f.label "フリガナ", class: "col-sm-3" %>
          <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "レイワ", class: "col-sm-3 mt-1 form-control-static rounded" %>
          <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "ミチコ", class: "col-sm-3 mt-1 form-control-static rounded" %>
        </div>
        <div class="field">
          <%= f.label "郵便番号", class: "col-sm-3" %>
          <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "0000000", class: "col-sm-3 mt-1 form-control-static rounded" %>
        </div>
        <div class="field">
          <%= f.label "住所", class: "col-sm-3" %>
          <%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", class: "col-sm-6 mt-1 form-control-static rounded" %>
        </div>
        <div class="field">
          <%= f.label "電話番号", class: "col-sm-3" %>
          <%= f.text_field :telephone_number, autocomplete: "telephone_number", placeholder: "0000000000", class: "col-sm-3 mt-1 form-control-static rounded" %>
        <div class="field">
          <%= f.label "メールアドレス", class: "col-sm-3" %>
          <%= f.text_field :email, autocomplete: "email", placeholder: "example@example.com", class: "col-sm-3 mt-1 form-control-static rounded" %>
        </div>
        <div class="actions btn-toolbar text-center mt-3">

        </div>
      <% end %>
    </div>
  </div>
</div>