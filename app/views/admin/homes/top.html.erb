              <td>
                <%= link_to admin_order_path(:order) do %>
                  <% order.created_at %>
                <% end %>
              </td>
              <td class="text-left">
                <%= full_name(order.customer) %>
              </td>
              <td class="text-right">
                <%= order.order_details.count %>
              </td>
