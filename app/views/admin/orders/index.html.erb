<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">注文履歴詳細</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-xs-9">
      <div class="field">
        <div class="col-xs-4">
          購入者
        </div>
        <div class="col-xs-8">
          <%= @order.name %>
        </div>
      </div>

      <div class="field">
        <div class="col-xs-4">
          注文日
        </div>
        <div class="col-xs-8">
          <%= @order.created_at %>
        </div>
      </div>

      <div class="field">
        <div class="col-xs-4">
          配送先
        </div>
        <div class="col-xs-8">
          <!--発送先郵便番号、住所、宛名を組み合わせて表示させたいが実装方法が不明のため後ほど実装する-->
          <!--配送先 < %= shipping_postal_code + shipping_address + shipping_name %>-->
        </div>
      </div>

      <div class="field">
        <div class="col-xs-4">
          支払方法
        </div>
        <div class="col-xs-8">
          <%= @order.payment_method %>
        </div>
      </div>

      <!--任意実装-->
      <!--<div>-->
      <!--  注文ステータス-->
      <!--</div>-->
    </div>

    <div>
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>

        <tbody>
          <%= @order_details.each do |order_detail| %>
            <tr>
              <td>
                <%= order_detail.item.name %>
              </td>
              <td>
                ¥<%= total_payment(order_detail.item.price).to_s(:delimited) %>
              </td>
              <td>
                <%= order_detail.amount %>
              </td>
              <td>
                ¥<%= price(order_detail).to_s(:delimited) %>
              </td>
              <td>
               <!--任意実装-->
               <!--製作ステータス-->
              </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div>
      <table>
        <tr>
          <th>商品合計</th>
          <td>¥<%= price(@order_detail).to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td>¥<%= @order.shipping_cost.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td>
            <!--商品合計と送料を合算して表示させたいが実装方法が不明のため後ほど実装する-->
            <!--請求金額合計 < %= price + shipping_cost %>-->
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>