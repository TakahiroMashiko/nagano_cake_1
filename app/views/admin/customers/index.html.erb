<h2>会員一覧</h2>
<div>
  <div>
    <table>
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <%= @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <!--フルネーム(姓名)で表示させたいが実装方法が不明のため後ほど実装する-->
              <!--< %= customer.last_name + customer.first_name %>-->
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <% if customer.is_active == true %>
                <p>有効</p>
              <% else %>
                <p>効</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>