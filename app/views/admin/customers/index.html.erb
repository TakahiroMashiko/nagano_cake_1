<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">会員一覧</h2>
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <table class="table table-hover table-condensed">
      <thead>
        <tr class="info">
          <th class="bg-light">会員ID</th>
          <th class="bg-light"><u>氏名</u></th>
          <th class="bg-light">メールアドレス</th>
          <th class="bg-light">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td class="info", style="width: 10%">
              <%= customer.id %>
            </td>
            <td class="text-left", style="width: 40%">
            <%= link_to admin_customer_path(customer.id), class: "text-dark" do %>
              <%= full_name(customer) %>
            <% end %>
            </td>
            <td class="text-left", style="width: 40%">
              <%= customer.email %>
            </td>
            <td class="text-left", style="width: 10%">
              <% if customer.is_active == true %>
                <p class="text-success">有効</p>
              <% else %>
                <p class="text-secondary">退会</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="text-center">
    <%= paginate(@customers) %>
  </div>
</div>