<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light"><%= full_name(@customer) %>さんの会員詳細 %></h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="field">
      <p>
        会員ID <%= @customer.id %>
      </p>
    </div>
    <div class="field">
      <p>
        <!--フルネーム(姓名)で表示させたいが実装方法が不明のため後ほど実装する-->
        <!--氏名 < %= customer.last_name + customer.first_name %>-->
      </p>
    </div>
    <div class="field">
      <p>
        <!--フルネーム(姓名カナ)で表示させたいが実装方法が不明のため後ほど実装する-->
        <!--フリガナ < %= customer.last_name_kana + customer.first_name_kana %>-->
      </p>
    </div>
    <div class="field">
      <p>
        郵便番号 <%= @customer.postal_code %>
      </p>
    </div>
    <div class="field">
      <p>
        住所 <%= @customer.address %>
      </p>
    </div>
    <div class="field">
      <p>
        電話番号 <%= @customer.telephone_number %>
      </p>
    </div>
    <div class="field">
      <p>
        メールアドレス <%= @customer.email %>
      </p>
    </div>
    <div class="field">
      <p>
        会員ステータス <% if @customer.is_active == true %>
          <p>退会</p>
        <% else %>
          <p>有効</p>
        <% end %>
      </p>
    </div>

    <div class="action">
      <%= link_to "編集する",edit_admin_customer_path(@customer) %>
      <%= link_to "注文履歴一覧を見る",current_index_admin_order_path(@customer) %>
    </div>
  </div>
</div>