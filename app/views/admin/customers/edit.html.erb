<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light"><%= full_name(@customer) %>さんの会員情報編集</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-md-center">

  <%= form_with model: @customer, lacal: true do |f| %>
    <div>
      <div>
        <%= f.label :"会員ID" %>
        <%= f.label :"#{@customer.id}" %>
      </div>
      <div>
        <%= f.label "氏名" %>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>
      <div>
        <%= f.label "フリガナ" %>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>
      <div>
        <%= f.label "郵便番号" %>
        <%= f.text_field :postal_code %>
      </div>
      <div>
        <%= f.label "住所" %>
        <%= f.text_field :address %>
      </div>
      <div>
        <%= f.label "電話番号" %>
        <%= f.text_field :telephone_number %>
      </div>
      <div>
        <%= f.label "会員ステータス" %>
        <%= f.radio_button :is_active, true %>
        <%= f.label "有効", value: :true %>
        <%= f.radio_button :is_active, false %>
        <%= f.label "退会", value: :false %>
      </div>
    </div>
      <div>
        <%= f.submit "変更を保存" %>
      </div>
  <% end %>
  </div>
</div>