<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2 class="head-line title_h2 text-center bg-light"><%= full_name(@customer) %>さんの会員情報編集</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-sm-10 px-sm-0 mb-3">
    <%= form_with model: [:admin, @customer], lacal: true do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <%= f.label :"会員ID" %>
            <%= f.label :"#{@customer.id}" %>
          </tr>
          <tr>
            <%= f.label "氏名" %>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
          </tr>
          <tr>
            <%= f.label "フリガナ" %>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
          </tr>
          <tr>
            <%= f.label "郵便番号" %>
            <%= f.text_field :postal_code %>
          </tr>
          <tr>
            <%= f.label "住所" %>
            <%= f.text_field :address %>
          </tr>
          <tr>
            <%= f.label "電話番号" %>
            <%= f.text_field :telephone_number %>
          </tr>
          <tr>
            <%= f.label "会員ステータス" %>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "有効", {value: :true} %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "退会", {value: :false} %>
          </tr>
        <div class="actions  col-xs-9 col-xs-offset-4">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>