<div>
  <div>
    <h2>
        <!--フルネーム(姓名)で表示させたいが実装方法が不明のため後ほど実装する-->
        <!--< %= customer.last_name + customer.first_name %>さんの会員情報編集-->
    </h2>

  <%= form_with model: @customer, lacal: true do |f| %>
    <div>
      <div>
        <%= f.label :"会員ID" %>
        <%= f.label :"#{@customer.id}" %>
      </div>
      <div>
        <%= f.label "氏名" %>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>
      <div>
        <%= f.label "フリガナ" %>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>
      <div>
        <%= f.label "郵便番号" %>
        <%= f.text_field :postal_code %>
      </div>
      <div>
        <%= f.label "住所" %>
        <%= f.text_field :address %>
      </div>
      <div>
        <%= f.label "電話番号" %>
        <%= f.text_field :telephone_number %>
      </div>
      <div>
        <%= f.label "会員ステータス" %>
        <%= f.radio_button :is_active, true %>
        <%= f.label "有効", value: :true %>
        <%= f.radio_button :is_active, false %>
        <%= f.label "退会", value: :false %>
      </div>
    </div>
  <% end %>
  </div>
</div>