<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">商品新規登録</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-md-center">
  <!-- form_with -->
  <%= form_with model: [:admin, @item], local: true do |f| %>
    <%= render "form_item", f: f %>
      <div class="container">
        <div class="row">
          <div class="col-sm-5"></div>
          <div class="col-sm-2">
            <%= f.submit "新規登録", class: "btn btn-success btn-lg pull-right" %>
          </div>
          <div class="col-sm-5"></div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>