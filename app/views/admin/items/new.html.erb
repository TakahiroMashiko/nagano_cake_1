<div>
  <div>
    <h2>商品新規登録</h2>
    <!-- form_with -->
    <%= form_with model: @item, local: true do |f| %>
    <div>
      <div class="img.field"></div>
    </div>
    <div>
      <div>
        <%= f.label :"商品名" %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label :"商品説明" %>
        <%= f.text_area :introduction %>
      </div>
      <div>
        <%= f.submit "新規登録" %>
      </div>
    </div>
    <% end %>
  </div>
</div>