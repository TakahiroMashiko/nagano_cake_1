<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <h2 class="head-line title_h2 text-center bg-light">商品新規登録</h2>
    </div>
</div>
<div class="container">
  <div class="row justify-content-md-center">
  <!--部分テンプレート化する、商品編集画面と同じ-->
  <!-- form_with -->
  <%= form_with model: [:admin, @item], local: true do |f| %>
    <br>
    <div class="container">
      <div class="form-inline mb-2">
        <%= f.label :"商品画像", class:"col-sm-3" %>
        <%= f.attachment_field :image, class:"image col-sm-9" %>
      </div>
      <div class="form-inline mb-2">
        <%= f.label :"商品名", class:"col-sm-3" %>
        <%= f.text_field :name, class:"col-sm-9" %>
      </div>
      <div class="form-inline mb-2">
        <%= f.label :"商品説明", class:"col-sm-3" %>
        <%= f.text_area :introduction, class:"col-sm-9" %>
      </div>
      <!--任意実装-->
      <!--<div>-->
      <!--  < %= f.label :"ジャンル" %>-->
      <!--</div>-->
      <div class="form-inline mb-2">
        <%= f.label :"税抜価格", class:"col-sm-3" %>
        <%= f.text_field :price, class:"col-sm-8" %>円
      </div>
      <!--任意実装-->
      <!--<div>-->
      <!--  < %= f.label :"販売ステータス" %>-->
      <!--</div>-->
      <div class="container">
        <div class="row">
        <div class="col-sm-5"></div>
        <div class="col-sm-2">
          <%= f.submit "新規登録", class: "btn btn-success btn-lg pull-right" %>
          <div class="col-sm-5"></div>
           </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>